    {
        arr[i] = rand() % 5 - 2;
    }

    for (int i = 0; i < a; i++)
    {
        cout << arr[i] << "\t";
    }
}

int poisk(int arr[], int a)
{
    int y = 0;
    for (int i = 0; i < a; i++)
    {
        if (arr[i] == 0)
        {
            y++;
        }
    }
    return y;
}

